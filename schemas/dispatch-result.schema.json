{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/schemas/dispatch-result.schema.json",
  "title": "Dispatch Result",
  "type": "object",
  "required": [
    "schema_version",
    "generated_utc",
    "status",
    "run_id",
    "release_tag",
    "owner_repo",
    "plan_path"
  ],
  "properties": {
    "schema_version": { "type": "string" },
    "generated_utc": { "type": "string", "format": "date-time" },
    "status": {
      "type": "string",
      "enum": ["no-go", "go-dry-run", "dispatched"]
    },
    "method": { "type": ["string", "null"] },
    "run_id": { "type": "integer" },
    "release_tag": { "type": "string" },
    "owner_repo": { "type": "string" },
    "consumer_ref": { "type": ["string", "null"] },
    "consumer_sha": { "type": ["string", "null"] },
    "skill_repo": { "type": ["string", "null"] },
    "workflow_ref": { "type": ["string", "null"] },
    "plan_path": { "type": "string" },
    "release_state_path": { "type": ["string", "null"] }
  }
}
